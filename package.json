{
  "name": "electron-react-starter",
  "version": "0.0.1",
  "description": "electron with react+typescript",
  "main": "main.js",
  "scripts": {
    "serve": "cross-env NODE_ENV=development PORT=3000 webpack-dev-server --mode development --hot --progress --color",
    "build": "webpack --mode production --progress --color",
    "package": "yarn build && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.yourcompany.app",
    "productName": "your app name",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "dist/**/*"
    ]
  },
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "author": "nova",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/history": "^4.7.5",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/webpack": "^4.41.8",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.2",
    "html-withimg-loader": "^0.1.16",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "style-loader": "^1.1.3",
    "typed-css-modules-webpack-plugin": "^0.1.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.20",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2"
  }
}
